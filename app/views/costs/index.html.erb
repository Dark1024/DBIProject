<div class="container all">
  <div class="col-md-8">
    <div class="row">
      <h3>Tarifa de Encomiendas</h3>
    </div>    
    <div class="row">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>De</th>
              <th>A</th>
              <th>Escala</th>
              <th>Contenido</th>
              <th>Precio</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          
          <tbody>
            <% @costs.each do |cost| %>
              <tr>
                <td><%= cost.name %></td>
                <td><%= cost.from %></td>
                <td><%= cost.to %></td>
                <td><%= cost.stopover %></td>
                <td><%= cost.content %></td>
                <td><%= cost.price %></td>
                <td><%= link_to 'Show', cost %></td>
                <td><%= link_to 'Edit', edit_cost_path(cost) %></td>
                <td><%= link_to 'Destroy', cost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>    
    </div>   
  </div>    
</div>
<br>

