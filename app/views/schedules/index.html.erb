<div class="container all">
  <div class="col-md-8">
    <div class="row">
      <h3>Itinerarios</h3>
    </div>    
    <div class="row">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Hora de Salida</th>
              <th>Estacion de Salida</th>
              <th>Hora de Llegada</th>
              <th>Estacion de Destino</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          
          <tbody>
            <% @schedules.each do |schedule| %>
              <tr>
                <td><%= schedule.departure_time %></td>
                <td><%= schedule.from_station_id %></td>
                <td><%= schedule.arrival_time %></td>
                <td><%= schedule.to_station_id %></td>
                <td><%= link_to 'Show', schedule %></td>
                <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
                <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>    
    </div>   
  </div>    
</div>
<br>

<%= link_to 'New Schedule', new_schedule_path %>
