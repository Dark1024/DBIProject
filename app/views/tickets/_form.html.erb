    <%= f.label :employee_id %><br>
    <%= f.select :employee_id, options_from_collection_for_select(Employee.all, :id, :first_names) %>
  </div>
  <div class="field">
    <%= f.label :fare_id %><br>
    <%= f.select :fare_id, options_from_collection_for_select(Fare.all, :id, :name) %>    
  </div>
  <div class="field">
    <%= f.label :trip_id %><br>
    <%= f.select :trip_id, options_from_collection_for_select(Trip.all, :id, :schedule_id) %>
  </div>
  <div class="field">
    <%= f.label :trip_date %><br>
    <%= f.datetime_select :trip_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
