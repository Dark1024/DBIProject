<div class="container all">
  <div class="col-md-8">
    <div class="row">
      <h3>Ayudantes</h3>
    </div>    
    <div class="row">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Conductor</th>
              <th>Ayudante</th>
              <th>Autobus</th>
              <th>Horario</th>
              <th>Asientos Diponibles</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
        
          <tbody>
            <% @trips.each do |trip| %>
              <tr>
                <td><%= trip.driver_id %></td>
                <td><%= trip.assistent_id %></td>
                <td><%= trip.autobus_id %></td>
                <td><%= trip.schedule_id %></td>
                <td><%= trip.available_seats %></td>
                <td><%= link_to 'Show', trip %></td>
                <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
                <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>    
    </div>   
  </div>    
</div>
<br>

